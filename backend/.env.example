# 基本配置
PROJECT_NAME=ThreeDisplay
VERSION=1.0.0
API_V1_STR=/api/v1

# 安全配置
SECRET_KEY=change-this-to-your-secret-key
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# 管理员配置
ADMIN_DEFAULT_PASSWORD=change-this-to-your-admin-password

# 数据库配置
DB_TYPE=sqlite  # 可选: sqlite 或 postgresql
# SQLite配置
SQLITE_URL=sqlite:///./app.db
# PostgreSQL配置（如果使用PostgreSQL，取消下面的注释并修改配置）
#POSTGRES_SERVER=localhost
#POSTGRES_USER=postgres
#POSTGRES_PASSWORD=postgres
#POSTGRES_DB=threedisplay
#POSTGRES_PORT=5433

# 文件上传配置
UPLOAD_DIR=uploads
MAX_UPLOAD_SIZE=104857600
ALLOWED_EXTENSIONS=glb,gltf,obj,fbx,jpg,jpeg,png

# CORS配置
BACKEND_CORS_ORIGINS=http://localhost:5173,http://localhost:8000 