# 基本配置
PROJECT_NAME=ThreeDisplay
VERSION=1.0.0
API_V1_STR=/api/v1

# 安全配置
SECRET_KEY=change-this-to-your-secret-key
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# 管理员配置
ADMIN_DEFAULT_PASSWORD=change-this-to-your-admin-password

# 数据库配置
POSTGRES_SERVER=db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=threedisplay
POSTGRES_PORT=5432

# 文件上传配置
UPLOAD_DIR=uploads
MAX_UPLOAD_SIZE=104857600
ALLOWED_EXTENSIONS=glb,gltf,obj,fbx,jpg,jpeg,png,webp

# CORS配置
BACKEND_CORS_ORIGINS=http://localhost,http://localhost:80,http://localhost:8000

# 包管理器镜像源配置
# 设置为true将使用国内镜像源（清华源），加快依赖安装速度
# 设置为false将使用默认源
USE_CHINESE_MIRRORS=false